@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HMS</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column text-light sidebar-nav">
        <div class="nav-item">
            <NavLink class="nav-link custom-nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="customers">
                        <span class="bi bi-person-bounding-box bi-custom" aria-hidden="true"></span> Customer
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="room">
                        <span class="bi bi-building bi-custom" aria-hidden="true"></span> Room
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="reservations">
                        <span class="bi bi-journal-plus bi-custom" aria-hidden="true"></span> Reservation
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="reservation-report">
                        <span class="bi bi-file-earmark-bar-graph bi-custom" aria-hidden="true"></span> Reservation Report
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="customer-reservation-report">
                        <span class="bi bi-file-earmark-bar-graph bi-custom" aria-hidden="true"></span> Customer Report
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill bi-custom" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link custom-nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link custom-nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

